<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="170dp">


    <ImageView android:layout_width="125dp" android:layout_height="119dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:id="@+id/img_view"

               android:layout_marginLeft="14dp" android:layout_marginTop="15dp" android:layout_alignParentBottom="true"
               android:layout_marginBottom="15dp" android:layout_alignParentStart="true"
               android:layout_marginStart="14dp"
    android:layout_alignParentRight="true"/>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="170dp"
                    android:layout_toRightOf="@id/img_view"
                    android:layout_marginLeft="15dp"
    android:id="@+id/rel">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/rel1"
        >



        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Movie Name:"
                  android:layout_alignParentRight="true"

                  android:id="@+id/movie_name"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
android:textStyle="bold"
                  android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginRight="165dp"/>

        <TextView android:layout_width="137dp" android:layout_height="wrap_content"
                  android:text="Name"
android:textSize="20dp"
                  android:layout_alignParentTop="true"
                  android:id="@+id/name"
android:fontFamily="cursive"
                  android:layout_marginLeft="100dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="109dp"
                  android:layout_marginTop="20dp"/>

        </RelativeLayout>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
android:id="@+id/rel2"
android:layout_below="@id/rel1">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Ratings:"
              android:layout_alignParentRight="true"

              android:id="@+id/ratings"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:textStyle="bold"
              android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginRight="165dp"/>

    <TextView android:layout_width="137dp" android:layout_height="wrap_content"

              android:text="countryy"

              android:layout_alignParentTop="true"
              android:id="@+id/country"
              android:fontFamily=""
              android:layout_marginLeft="100dp"
              android:layout_alignParentStart="true" android:layout_marginStart="109dp"
              android:layout_marginTop="22dp"/>
</RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@+id/rel2">


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Year:"
                          android:layout_alignParentRight="true"

                          android:id="@+id/year"
                          android:layout_alignParentLeft="true"
                          android:layout_alignParentTop="true"
                          android:textStyle="bold"
                          android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginRight="165dp"/>

                <TextView android:layout_width="137dp" android:layout_height="wrap_content"

                          android:text="city"

                          android:layout_alignParentTop="true"
                          android:id="@+id/city"
                          android:fontFamily=""
                          android:layout_marginLeft="100dp"
                          android:layout_alignParentStart="true" android:layout_marginStart="109dp"
                          android:layout_marginTop="20dp"/>

            </RelativeLayout>
            </RelativeLayout>


</RelativeLayout>

